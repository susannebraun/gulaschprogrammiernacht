<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context="com.github.susannebraun.gulasch.qr.QRScanDetailFragment" >
    
    <Button
        android:id="@+id/qr_scan_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_qr_scan_detail"
        android:layout_margin="16dp" />

    <TextView
         android:id="@+id/label_qr_scan_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/text_qr_scan_result_detail"
        android:visibility="invisible"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/text_qr_scan_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:layout_weight="5"
        android:visibility="invisible"
        android:text="" />
 
 </LinearLayout>
